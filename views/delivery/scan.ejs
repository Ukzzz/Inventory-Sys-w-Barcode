<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Uniform Inventory System</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="bg-gray-100">
    <!-- Navigation -->
    <nav class="bg-blue-600 shadow-lg">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <a href="/dashboard" class="text-white text-xl font-bold">
                        <i class="fas fa-boxes mr-2"></i>
                        Uniform Inventory
                    </a>
                </div>
                
                <!-- Desktop Menu -->
                <div class="hidden md:flex items-center space-x-4">
                    <a href="/dashboard" class="text-white hover:text-blue-200 px-3 py-2 rounded-md">
                        <i class="fas fa-tachometer-alt mr-1"></i> Dashboard
                    </a>
                    <a href="/inventory" class="text-white hover:text-blue-200 px-3 py-2 rounded-md">
                        <i class="fas fa-warehouse mr-1"></i> Inventory
                    </a>
                    <a href="/delivery/scan" class="text-white hover:text-blue-200 px-3 py-2 rounded-md bg-blue-700">
                        <i class="fas fa-qrcode mr-1"></i> Scan Delivery
                    </a>
                    <a href="/delivery/history" class="text-white hover:text-blue-200 px-3 py-2 rounded-md">
                        <i class="fas fa-history mr-1"></i> Delivery History
                    </a>
                    <a href="/reports" class="text-white hover:text-blue-200 px-3 py-2 rounded-md">
                        <i class="fas fa-chart-bar mr-1"></i> Reports
                    </a>
                    
                    <% if (user.role === 'admin') { %>
                    <a href="/register" class="text-white hover:text-blue-200 px-3 py-2 rounded-md">
                        <i class="fas fa-user-plus mr-1"></i> Add User
                    </a>
                    <% } %>
                    
                    <!-- User Info -->
                    <div class="text-white px-3 py-2 flex items-center">
                        <i class="fas fa-user mr-2"></i>
                        <span class="mr-1"><%= user.username %></span>
                        <span class="text-xs text-blue-200">(<%= user.role %>)</span>
                    </div>
                    
                    <!-- Logout Button -->
                    <form method="POST" action="/logout" class="inline">
                        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md font-medium transition duration-150 ease-in-out flex items-center">
                            <i class="fas fa-sign-out-alt mr-2"></i>
                            Logout
                        </button>
                    </form>
                </div>
                
                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button type="button" class="text-white hover:text-blue-200 focus:outline-none focus:text-blue-200">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Mobile Menu -->
        <div class="md:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-blue-700">
                <a href="/dashboard" class="text-white hover:text-blue-200 block px-3 py-2 rounded-md">
                    <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
                </a>
                <a href="/inventory" class="text-white hover:text-blue-200 block px-3 py-2 rounded-md">
                    <i class="fas fa-warehouse mr-2"></i> Inventory
                </a>
                <a href="/delivery/scan" class="text-white hover:text-blue-200 block px-3 py-2 rounded-md bg-blue-600">
                    <i class="fas fa-qrcode mr-2"></i> Scan Delivery
                </a>
                <a href="/delivery/history" class="text-white hover:text-blue-200 block px-3 py-2 rounded-md">
                    <i class="fas fa-history mr-2"></i> Delivery History
                </a>
                <a href="/reports" class="text-white hover:text-blue-200 block px-3 py-2 rounded-md">
                    <i class="fas fa-chart-bar mr-2"></i> Reports
                </a>
                <% if (user.role === 'admin') { %>
                <a href="/register" class="text-white hover:text-blue-200 block px-3 py-2 rounded-md">
                    <i class="fas fa-user-plus mr-2"></i> Add User
                </a>
                <% } %>
                <form method="POST" action="/logout" class="block">
                    <button type="submit" class="w-full text-left text-white hover:text-blue-200 block px-3 py-2 rounded-md">
                        <i class="fas fa-sign-out-alt mr-2"></i> Logout
                    </button>
                </form>
            </div>
        </div>
    </nav>

<div class="max-w-4xl mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Scan Barcode for Delivery</h1>
        <p class="text-gray-600">Scan or manually enter barcode to process delivery</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Scanner Section -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">
                <i class="fas fa-qrcode mr-2"></i>
                Barcode Scanner
            </h2>
            
            <!-- Camera Preview -->
            <div class="relative">
                <video id="video" class="w-full h-64 bg-gray-200 rounded-lg" style="display: none;"></video>
                <canvas id="canvas" class="hidden"></canvas>
                <div id="scanner-placeholder" class="w-full h-64 bg-gray-200 rounded-lg flex items-center justify-center">
                    <div class="text-center">
                        <i class="fas fa-camera text-4xl text-gray-400 mb-4"></i>
                        <p class="text-gray-500">Click "Start Camera" to begin scanning</p>
                    </div>
                </div>
            </div>
            
            <!-- Scanner Controls -->
            <div class="mt-4 flex space-x-2">
                <button id="start-camera" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium transition duration-150 ease-in-out">
                    <i class="fas fa-play mr-2"></i>
                    Start Camera
                </button>
                <button id="stop-camera" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md font-medium transition duration-150 ease-in-out" style="display: none;">
                    <i class="fas fa-stop mr-2"></i>
                    Stop Camera
                </button>
            </div>
            
            <!-- Manual Barcode Input -->
            <div class="mt-6 border-t border-gray-200 pt-6">
                <h3 class="text-lg font-medium text-gray-900 mb-3">Or Enter Barcode Manually</h3>
                <div class="flex space-x-2">
                    <input type="text" id="manual-barcode" placeholder="Enter barcode number and press Enter" 
                           class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    <button id="manual-scan" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md font-medium transition duration-150 ease-in-out">
                        <i class="fas fa-search mr-2"></i>
                        Search
                    </button>
                </div>
            </div>
        </div>

        <!-- Delivery Form Section -->
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">
                <i class="fas fa-shipping-fast mr-2"></i>
                Delivery Information
            </h2>
            
            <!-- Item Details (Auto-filled after scan) -->
            <div id="item-details" class="hidden mb-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
                <h3 class="font-medium text-blue-900 mb-2">Scanned Item</h3>
                <div class="grid grid-cols-2 gap-2 text-sm">
                    <div><span class="font-medium">Name:</span> <span id="item-name">-</span></div>
                    <div><span class="font-medium">Category:</span> <span id="item-category">-</span></div>
                    <div><span class="font-medium">Size:</span> <span id="item-size">-</span></div>
                    <div><span class="font-medium">Color:</span> <span id="item-color">-</span></div>
                    <div><span class="font-medium">Available Stock:</span> <span id="item-stock">-</span></div>
                    <div><span class="font-medium">Price:</span> <span id="item-price">-</span></div>
                </div>
                <div class="mt-2">
                    <span class="font-medium">Barcode:</span> <span id="item-barcode" class="font-mono text-sm">-</span>
                </div>
            </div>

            <!-- Delivery Form -->
            <form id="delivery-form" action="/delivery/record" method="POST" class="space-y-4">
                <input type="hidden" id="inventory-id" name="inventoryId">
                <input type="hidden" id="scanned-barcode" name="barcode">
                
                <div>
                    <label for="customer-name" class="block text-sm font-medium text-gray-700 mb-1">
                        Customer Name *
                    </label>
                    <input type="text" id="customer-name" name="customerName" required 
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" 
                           placeholder="Enter customer name">
                </div>
                
                <div>
                    <label for="quantity-delivered" class="block text-sm font-medium text-gray-700 mb-1">
                        Quantity to Deliver *
                    </label>
                    <input type="number" id="quantity-delivered" name="quantityDelivered" required min="1" 
                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" 
                           placeholder="Enter quantity">
                </div>
                
                <div>
                    <label for="notes" class="block text-sm font-medium text-gray-700 mb-1">
                        Notes (Optional)
                    </label>
                    <textarea id="notes" name="notes" rows="3" 
                              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" 
                              placeholder="Any additional notes..."></textarea>
                </div>
                
                <button type="submit" id="submit-delivery" disabled
                        class="w-full bg-green-600 hover:bg-green-700 disabled:bg-gray-400 text-white px-4 py-2 rounded-md font-medium transition duration-150 ease-in-out">
                    <i class="fas fa-check mr-2"></i>
                    Record Delivery
                </button>
            </form>
            
            <!-- Status Messages -->
            <div id="status-message" class="mt-4 hidden"></div>
        </div>
    </div>
</div>

<!-- Include QuaggaJS for barcode scanning -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/quagga/0.12.1/quagga.min.js"></script>

<script>
let scannerActive = false;
let currentItem = null;

// Camera controls
document.getElementById('start-camera').addEventListener('click', startCamera);
document.getElementById('stop-camera').addEventListener('click', stopCamera);
document.getElementById('manual-scan').addEventListener('click', manualScan);

// Start camera for barcode scanning
function startCamera() {
    if (scannerActive) return;
    
    navigator.mediaDevices.getUserMedia({ 
        video: { 
            facingMode: 'environment' // Use back camera on mobile
        } 
    })
    .then(function(stream) {
        const video = document.getElementById('video');
        const placeholder = document.getElementById('scanner-placeholder');
        
        video.srcObject = stream;
        video.style.display = 'block';
        placeholder.style.display = 'none';
        
        document.getElementById('start-camera').style.display = 'none';
        document.getElementById('stop-camera').style.display = 'inline-block';
        
        scannerActive = true;
        
        // Start QuaggaJS for barcode detection
        Quagga.init({
            inputStream: {
                name: "Live",
                type: "LiveStream",
                target: video,
                constraints: {
                    width: 640,
                    height: 480,
                    facingMode: "environment"
                },
            },
            decoder: {
                readers: [
                    "code_128_reader",
                    "ean_reader",
                    "ean_8_reader",
                    "code_39_reader",
                    "code_39_vin_reader",
                    "codabar_reader",
                    "upc_reader",
                    "upc_e_reader",
                    "i2of5_reader"
                ]
            },
            locate: true,
            locator: {
                patchSize: "medium",
                halfSample: true
            }
        }, function(err) {
            if (err) {
                console.error('QuaggaJS initialization error:', err);
                showStatus('Camera initialization failed. Please try manual input.', 'error');
                return;
            }
            Quagga.start();
        });
        
        // Listen for barcode detection
        Quagga.onDetected(function(data) {
            const barcode = data.codeResult.code;
            console.log('Barcode detected:', barcode);
            processBarcode(barcode);
        });
        
    })
    .catch(function(err) {
        console.error('Camera access error:', err);
        showStatus('Camera access denied. Please use manual input.', 'error');
    });
}

// Stop camera
function stopCamera() {
    if (!scannerActive) return;
    
    const video = document.getElementById('video');
    const placeholder = document.getElementById('scanner-placeholder');
    
    if (video.srcObject) {
        video.srcObject.getTracks().forEach(track => track.stop());
        video.srcObject = null;
    }
    
    video.style.display = 'none';
    placeholder.style.display = 'flex';
    
    document.getElementById('start-camera').style.display = 'inline-block';
    document.getElementById('stop-camera').style.display = 'none';
    
    Quagga.stop();
    scannerActive = false;
}

// Manual barcode input
function manualScan() {
    const barcode = document.getElementById('manual-barcode').value.trim();
    if (barcode) {
        processBarcode(barcode);
        document.getElementById('manual-barcode').value = '';
    } else {
        showStatus('Please enter a barcode number', 'error');
    }
}

// Process scanned barcode
function processBarcode(barcode) {
    showStatus('Processing barcode...', 'info');
    
    fetch('/delivery/scan', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ barcode: barcode })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            currentItem = data.item;
            populateItemDetails(data.item);
            enableDeliveryForm();
            showStatus('Item found successfully!', 'success');
        } else {
            showStatus(data.error || 'Item not found', 'error');
            clearItemDetails();
        }
    })
    .catch(error => {
        console.error('Error processing barcode:', error);
        showStatus('Error processing barcode. Please try again.', 'error');
    });
}

// Populate item details in the form
function populateItemDetails(item) {
    document.getElementById('item-name').textContent = item.itemName;
    document.getElementById('item-category').textContent = item.category;
    document.getElementById('item-size').textContent = item.size;
    document.getElementById('item-color').textContent = item.color;
    document.getElementById('item-stock').textContent = item.quantity;
    document.getElementById('item-price').textContent = 'Rs ' + item.price.toFixed(2);
    document.getElementById('item-barcode').textContent = item.barcode;
    
    document.getElementById('inventory-id').value = item.id;
    document.getElementById('scanned-barcode').value = item.barcode;
    
    document.getElementById('item-details').classList.remove('hidden');
    
    // Set max quantity for delivery
    document.getElementById('quantity-delivered').max = item.quantity;
    document.getElementById('quantity-delivered').value = 1;
}

// Clear item details
function clearItemDetails() {
    document.getElementById('item-details').classList.add('hidden');
    document.getElementById('delivery-form').reset();
    document.getElementById('inventory-id').value = '';
    document.getElementById('scanned-barcode').value = '';
    disableDeliveryForm();
}

// Enable delivery form
function enableDeliveryForm() {
    document.getElementById('submit-delivery').disabled = false;
    document.getElementById('customer-name').focus();
}

// Disable delivery form
function disableDeliveryForm() {
    document.getElementById('submit-delivery').disabled = true;
}

// Show status message
function showStatus(message, type) {
    const statusDiv = document.getElementById('status-message');
    statusDiv.className = `mt-4 p-3 rounded-md ${getStatusClass(type)}`;
    statusDiv.textContent = message;
    statusDiv.classList.remove('hidden');
    
    // Auto-hide after 5 seconds
    setTimeout(() => {
        statusDiv.classList.add('hidden');
    }, 5000);
}

// Get status class based on type
function getStatusClass(type) {
    switch(type) {
        case 'success': return 'bg-green-100 border border-green-400 text-green-700';
        case 'error': return 'bg-red-100 border border-red-400 text-red-700';
        case 'info': return 'bg-blue-100 border border-blue-400 text-blue-700';
        default: return 'bg-gray-100 border border-gray-400 text-gray-700';
    }
}

// Form validation
document.getElementById('delivery-form').addEventListener('submit', function(e) {
    const customerName = document.getElementById('customer-name').value.trim();
    const quantity = parseInt(document.getElementById('quantity-delivered').value);
    
    if (!customerName) {
        e.preventDefault();
        showStatus('Please enter customer name', 'error');
        return;
    }
    
    if (!quantity || quantity <= 0) {
        e.preventDefault();
        showStatus('Please enter a valid quantity', 'error');
        return;
    }
    
    if (currentItem && quantity > currentItem.quantity) {
        e.preventDefault();
        showStatus('Quantity exceeds available stock', 'error');
        return;
    }
});

</script>

<!-- Footer -->
<footer class="bg-gray-800 text-white py-4 mt-8">
    <div class="max-w-7xl mx-auto px-4 text-center">
{{ ... }}
    </div>
</footer>

<!-- Custom JavaScript -->
<script src="/js/app.js"></script>
</body>
</html>
